<section class="row">
    <div class="column">
        <h2>Create New Post</h2>

        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" name="post-title" id="post-title"/>
            </div>
            <div>
                <label for="post-text">Text</label>
                <textarea id="post-text" name="post-text"></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
    <div class="column">
        <h2>About me</h2>
        {{> user-info}}
    </div>

</section>

{{#if post.length}}
<section>
    <h2>Your Post</h2>
    <ol>
        {{#each post as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}"class="edit-link">Edit</a>
        </li>
    </ol>
</section>
{{#if}}

<script src="/js/add-post.js"></script>